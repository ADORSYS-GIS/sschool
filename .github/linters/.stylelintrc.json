{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "tailwind",
          "layer",
          "variants",
          "responsive",
          "screen",
          "plugin"
        ]
      }
    ],
    "at-rule-no-deprecated": null,
    "no-descending-specificity": null
  }
}